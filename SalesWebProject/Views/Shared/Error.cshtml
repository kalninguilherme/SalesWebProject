@model SalesWebProject.ViewModels.ErrorViewModel;
@{
    ViewBag.Title = "Erro";
}

<div class="container">
    <h1 class="text-danger">Erro ao processar esta requisição</h1>

    <h4 class="mt-4">@Model.Message</h4>

    @if (Model.ShowRequestId)
    {
        <p class="mt-4">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
</div>

