@model List<SalesWebProject.ViewModels.SalesRecordsViewModel>;
@using System.Globalization;

@{
    ViewBag.Title = "Vendas";
}

<div>
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2>@ViewBag.Title</h2>
        </div>
        <div>
            <a  asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>
                Novo
            </a>
        </div>
    </div>

    <hr />

    <table class="table">
        <thead>
            <tr>
                <th width="5%">
                    #
                </th>
                <th>
                    Data
                </th>
                  <th>
                    Valor da Venda
                </th>
                  <th>
                    Status
                </th>
                  <th>
                    Id Vendedor
                </th>
                 
                <th width="1%"></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model) {
                    <tr>
                         <td>
                            @item.Id
                        </td>
                        <td>
                            @item.DateString
                        </td>
                        <td>
                            @item.Amount.ToString("C", new CultureInfo("pt-Br"))
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            @item.Seller.Name
                        </td>
                       
                        <td class="text-nowrap">
                            <div class="btn-group" role="group">
                            <i class="bi bi-three-dots-vertical" style="font-size: 1.2rem;" data-bs-toggle="dropdown"></i>
                                <div class="dropdown-menu">
                                    <a asp-action="Details"  asp-route-id="@item.Id" class="dropdown-item">Detalhes</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id"class="dropdown-item">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"class="dropdown-item">Deletar</a>
                                </div>
                            </div>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>

