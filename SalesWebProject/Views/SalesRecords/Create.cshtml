@model SalesWebProject.ViewModels.SalesRecordsViewModel

@{
    ViewBag.Title = "Cadastrar nova venda";
}

<div class="container">
    <h2>@ViewBag.Title</h2>

    <hr style="margin-bottom: 0.5rem" />

    <div class="row">
        <div class="col-md-4">
            <form asp-controller="SalesRecords" asp-action="Create">
                <div class="form-group">
                    <label asp-for="@Model.Date" class="control-label">Data</label>
                    <input asp-for="@Model.Date" class="form-control" placeholder="Data" />
                    <span asp-validation-for="@Model.Date" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="@Model.Amount" class="control-label">Valor do Produto</label>
                    <input asp-for="@Model.Amount" class="form-control" placeholder="Valor" />
                    <span asp-validation-for="@Model.Amount" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="@Model.SellerId" class="control-label">Vendedor</label>
                    <select asp-for="@Model.SellerId" asp-items="@ViewBag.Sellers" class="form-control"></select>
                </div>

                <div class="d-flex justify-content-between align-items-center form-group mt-4">
                    <a asp-action="Index" class="btn btn-outline-primary" style="font-size: 1.2rem">Retornar</a>
                    <button type="submit" class="btn btn-outline-primary" style="font-size: 1.2rem">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
