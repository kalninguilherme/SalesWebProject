@model SalesWebProject.ViewModels.SalesRecordsViewModel

@{
    ViewBag.Title = string.Format("Editar dados da Venda #(0)", Model.Id);
}

<div class="container">
    <h2>@ViewBag.Title</h2>

    <hr style="margin-bottom: 0.5rem" />

    <div class="row">
        <div class="col-md-6">
            <form asp-controller="SalesRecords" asp-action="Edit">
                <div class="form-group">
                    <label asp-for="@Model.Date" class="control-label">Data de Venda</label>
                    <input asp-for="@Model.Date" class="form-control" />
                    <span asp-validation-for="@Model.Date" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="@Model.Amount" class="control-label"></label>
                    <input asp-for="@Model.Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="@Model.Status" class="control-label">Status do Pedido</label>
                    <select asp-for="@Model.Status" asp-items="@ViewBag.Status" class="form-control"></select>
                    <span asp-validation-for="@Model.Status" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="@Model.SellerId" class="control-label"></label>
                    <select asp-for="@Model.SellerId" asp-items="@ViewBag.Sellers" class="form-control"></select>
                    <span asp-validation-for="@Model.SellerId" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between align-items-center form-group mt-4">
                    <a type="button" asp-action="Index" class="btn btn-outline-primary" style="font-size: 1.2rem">Voltar</a>
                    <button type="submit" class="btn btn-outline-primary" style="font-size: 1.2rem">Salvar</button>
                </div>
            </form>
        </div>
    </div>

</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
