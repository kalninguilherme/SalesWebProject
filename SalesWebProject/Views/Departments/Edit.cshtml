@model SalesWebProject.ViewModels.DepartmentsViewModel;

@{
    ViewBag.Title = string.Format("Editar Departamento #{0}: {1}", Model.Id, Model.Name);
}

<div class="container">
    <h4>@ViewBag.Title</h4>

    <hr style="margin-bottom: 0.5rem !important;" />

    <div class="row">
        <div class="col-md-6">
            <form asp-controller="Departments" asp-action="Edit">
                <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center form-group mt-4">
                    <a asp-action="Index" class="btn btn-outline-primary" style="font-size: 1.2rem">Retornar</a>
                    <button type="submit" class="btn btn-outline-primary" style="font-size: 1.2rem">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}