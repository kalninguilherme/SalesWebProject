@model SalesWebProject.ViewModels.DepartmentsViewModel;

@{
    ViewBag.Title = "Detalhes do Departamento";

}

<div class="container">
    <h4>@ViewBag.Title</h4>

    <hr style="margin-bottom: 0.5rem !important;" />

    <div class="row">
        <div class="col-md-6">
            <form asp-controller="Departments" class="form-group">
                @Html.HiddenFor(m => m.Id)
                <div>
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input readonly value="@(string.IsNullOrWhiteSpace(Model.Name) ? "-" : Model.Name)" class="form-control" />
                </div>
                <div class="form-group mt-4">
                    <label asp-for="@Model.Sellers" class="control-label"></label>
                    <input readonly value="@(Model.Sellers != null ? string.Join(", ", Model.Sellers.Select(m => m.Name)) : "-")" class="form-control" />
                </div>
            </form>
            <div class="d-flex justify-content-between align-items-center form-group mt-4">
                <a class="btn btn-outline-primary" style="font-size: 1.2rem" asp-action="Index">Retornar</a>
                <a class="btn btn-outline-primary" style="font-size: 1.2rem" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            </div>
        </div>
    </div>
</div>
