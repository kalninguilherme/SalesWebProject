@model SalesWebProject.ViewModels.DepartmentViewModel;

@{
    ViewBag.Title = "Detalhes";
}

<h1>@ViewBag.Title</h1>

<div>
    <h4>Department</h4>
    <hr />
    
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
             @(string.IsNullOrWhiteSpace(Model.Name) ? "-" : Model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Vendedores
        </dt>
        <dd class = "col-sm-10">
            @(Model.Sellers != null ? string.Join(", ", Model.Sellers.Select(m => m.Name)) : "-")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
