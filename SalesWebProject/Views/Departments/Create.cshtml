@model SalesWebProject.ViewModels.DepartmentsViewModel;

@{
    ViewBag.Title = "Criar novo Departamento";
}

<div class="container">
    <h4>@ViewBag.Title</h4>

    <hr style="margin-bottom: 0.5rem !important;" />

    <div class="row">
        <div class="col-md-6">
            <form asp-controller="Departments" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between align-items-center form-group mt-4">
                        <a asp-action="Index" class="btn btn-outline-primary" style="font-size: 1.2rem">Retornar</a>
                        <button type="submit" class="btn btn-outline-primary" style="font-size: 1.2rem">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
