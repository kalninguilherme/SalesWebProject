@model SalesWebProject.ViewModels.DepartmentsViewModel;

@{
    ViewBag.Title = string.Format("Confirmar exclusão do departamento: {0}", Model.Name);
}

<div class="container">
    <h4>@ViewBag.Title</h4>

    <hr style="margin-bottom: 0.5rem !important;" />

    <div class="row">
        <div class="col-md-6">
            <form asp-controller="Department" asp-action="Delete">
                <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input readonly asp-for="@Model.Name" class="form-control" placeholder="Nome" />
                </div>

                <div class="d-flex justify-content-between align-items-center form-group mt-4">
                    <a asp-action="Index" class="btn btn-outline-primary" style="font-size: 1.2rem">Retornar</a>
                    <button type="submit" class="btn btn-danger" style="font-size: 1.2rem">Excluir</button>
                </div>
            </form>
        </div>
    </div>
</div>
